<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColorPrimary">@color/app_black</item>
        <item name="android:textColorSecondary">@color/app_black</item>
        <item name="actionMenuTextColor">@color/app_black</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/app_main</item>
        <item name="colorControlHighlight">@color/app_main</item>
    </style>

</resources>
